#!/usr/bin/env bash

variant=`setxkbmap -query | grep variant | awk '{print $2}'`

if [ $variant = lyzell ]; then
    setxkbmap -layout se -option -option shift:both_capslock
else
    setxkbmap -layout us -variant lyzell \
        -option ctrl:nocaps -option shift:both_capslock \
        -option altwin:prtsc_rwin -option altwin:menu_win
fi
