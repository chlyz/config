_gen_fzf_default_opts() {

local fg_main='#000000'
local bg_main='#ffffff'
local bg_alt='#f2eff3'
local red='#a60000'
local green='#005e00'
local magenta='#721045'
local cyan='#00538b'
local blue='#0031a9'

export FZF_DEFAULT_OPTS="$FZF_DEFAULT_OPTS"\
" --color=bg+:$bg_alt,bg:$bg_main,spinner:$red,hl:$blue"\
" --color=fg:$fg_main,header:$green,info:$cyan,pointer:$magenta"\
" --color=marker:$green,fg+:$fg_main,prompt:$cyan,hl+:$red"\
" --layout=reverse --exact"


}

_gen_fzf_default_opts
